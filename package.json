{
    "name"           : "fictoan-monorepo",
    "version"        : "1.0.0",
    "private"        : true,
    "scripts"        : {
        "preinstall"     : "npx only-allow pnpm",
        "dev"            : "turbo run dev",
        "build"          : "turbo run build",
        "rebuild"        : "./scripts/rebuild.sh",
        "start:docs"     : "pnpm --filter fictoan-docs dev",
        "build-and-copy" : "node scripts/copy-lib.js"
    },
    "engines"        : {
        "node" : ">=18.0.0",
        "pnpm" : ">=10.15.1"
    },
    "devDependencies" : {
        "turbo" : "^2.4.0"
    },
    "packageManager" : "pnpm@10.15.1"
}
