{
    "compilerOptions" : {
        "target"                           : "ES2022",
        "esModuleInterop"                  : true,
        "resolveJsonModule"                : true,
        "forceConsistentCasingInFileNames" : true,
        "strict"                           : true,
        "skipLibCheck"                     : true,
        "jsx"                              : "react-jsx",
        "module"                           : "ESNext",
        "sourceMap"                        : true,
        "outDir"                           : "dist",
        "moduleResolution"                 : "bundler",
        "resolvePackageJsonExports"        : true,
        "preserveSymlinks"                 : true,
        "allowSyntheticDefaultImports"     : true,
        "rootDir"                          : "./src",
        "declaration"                      : true,
        "declarationDir"                   : "./dist/types",
        "emitDeclarationOnly"              : true,
        "declarationMap"                   : true,
        "allowJs"                          : true,
        "isolatedModules"                  : true,
        "noEmitOnError"                    : true,
        "composite"                        : true,
        "baseUrl"                          : ".",
        "types"                            : [
            "vite-plugin-svgr/client",
            "node",
            "react",
            "react-dom"
        ],
        "paths"                            : {
            "$/*"           : [
                "./src/*"
            ],
            "$colour/*" : [
                "./src/colour/colour/*"
            ],
            "$components/*" : [
                "./src/components/*"
            ],
            "$element"    : [
                "./src/components/Element/index"
            ],
            "$hooks/*"      : [
                "./src/hooks/*"
            ],
            "$form/*"       : [
                "./src/components/Form/*"
            ],
            "$styles/*"     : [
                "./src/styles/*"
            ],
            "$tags"      : [
                "./src/components/Element/Tags"
            ],
            "$types/*"      : [
                "./src/types/*"
            ],
            "$typography/*"      : [
                "./src/components/Typography/*"
            ],
            "$utils/*"      : [
                "./src/utils/*"
            ]
        }
    },
    "include"         : [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude"         : [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stories.tsx"
    ]
}
